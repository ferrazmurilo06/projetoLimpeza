generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id         Int     @id @default(autoincrement())
  nome       String
  preco      Float
  categoria  String
  quantidade Int
  descricao  String? 
  urlImagem  String
  status     String
}

model User {
  id    Int    @id @default(autoincrement())
  nome  String
  email String @unique
  senha String
}

model Categoria {
  id        Int     @id @default(autoincrement())
  nome      String  @unique 
  descricao String?
}
